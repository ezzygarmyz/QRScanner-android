<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="{{ cookiecutter.base_theme }}">
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme.Base" />

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="AppTheme.Base">
        <item name="colorPrimary">#424549</item>
        <item name="colorPrimaryDark">#1e2124</item>
        <item name="android:windowBackground">#000000</item>
    </style>

    <!-- Launcher Theme -->
    <style name="AppTheme.Launcher" parent="AppTheme.Base"></style>

</resources>
